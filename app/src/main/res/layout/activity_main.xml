<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="9"
    tools:context="com.example.admin.tp10.MainActivity">

    <TextView
        android:id="@+id/Pile4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:background="@android:color/holo_blue_bright"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/Pile3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="1"
        android:background="@android:color/holo_blue_bright"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Pile2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="2"
        android:background="@android:color/holo_blue_bright"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Pile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="3"
        android:background="@android:color/holo_blue_bright"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/NombreSaisi"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="4"
        android:background="@android:color/darker_gray"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/touche1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:text="1" />

    <Button
        android:id="@+id/touche2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:text="2" />

    <Button
        android:id="@+id/touche3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="5"
        android:text="3" />

    <Button
        android:id="@+id/touchePlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="5"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="+" />

    <Button
        android:id="@+id/touche4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:text="4" />

    <Button
        android:id="@+id/touche5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6"
        android:text="5" />

    <Button
        android:id="@+id/touche6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="6"
        android:text="6" />

    <Button
        android:id="@+id/toucheMoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="6"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="-" />

    <Button
        android:id="@+id/touche7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="7"
        android:text="7" />

    <Button
        android:id="@+id/touche8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="7"
        android:text="8" />

    <Button
        android:id="@+id/touche9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="7"
        android:text="9" />

    <Button
        android:id="@+id/toucheDiviser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="7"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="/" />

    <Button
        android:id="@+id/toucheClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="8"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="CLEAR" />

    <Button
        android:id="@+id/touchePop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="8"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="POP" />

    <Button
        android:id="@+id/toucheSwap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="8"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="SWAP" />

    <Button
        android:id="@+id/toucheEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="8"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="ENTER" />
</GridLayout>
